<!DOCTYPE html>
<html>
  <head>
    <meta charset="iso-8859-7">
    <link rel="stylesheet" href="style.css">
  </head>
  <div class="background-image">
    <header>
      <nav class="navigation-bar">
        <ul class="navigation-items">
          <li id="about-list-item"><a href="#about" class="btn btn-info navbar-btn">About</a></li>
          <li id="contact-list-item"><a href="#contact" class="btn btn-info navbar-btn">Contact</a></li>
          <li id="blog-list-item"><%= link_to 'Blog', posts_path, class: "btn btn-info navbar-btn" %></li>
        </ul>
      </nav>
    </header>
    <body>
      <div class ="first_section">
        <h1 class="title-1">Hi, I'm [Your Name]</h1>
        <h2 class="title-2">Welcome to my website</h2>
      </div>
    </div>
      <div class="container">
        <div class="second_section">
          <div id="about">
            <h2 class="about-title">About Me</h2>
          </div>
          <div class="skills_passions_container">
            <div class="skills">
              <h3 class="skills_title">My skills</h3>
              <ul class="skills-list">
                <li id="skill-1">Skill 1</li>
                <li id="skill-2">Skill 2</li>
                <li id="skill-3">Skill 3</li>
                <li id="skill-4">Skill 4</li>
              </ul>
            </div>
            <div class="passions">
              <h3 class="passions_title">My Passions</h3>
              <ul class="passions-list">
                <li id="passion-1">Passion 1</li>
                <li id="passion-2">Passion 2</li>
                <li id="passion-3">Passion 3</li>
                <li id="passion-4">Passion 4</li>
              </ul>
            </div>
        </div>
    </div>
      <hr>
      <div id="contact">
        <h2 class="contact-title">Contact Me</h2>
        <form id="contact_me" action="" method="POST">
          <input required="required" type="text" name="name" placeholder="Your name"/>
          <input required="required" type="email" name="_replyto" placeholder="Your email">
          <textarea required="required" placeholder="I'd love to hear from you - send me a message!"></textarea>
          <input class="submit-button" type="submit" value="Send">
        </form>
      </div>
    </div>
    <script>
      var title = $('.title-1');
      title.text("Hi, I'm Wenting");
      title.css({color: "red", fontSize: "60px"});

      function changeTitleColor(){
        var randomColor = getRandomColor();
        title.css({color: randomColor});
      }

      function getRandomColor(){
        return "#000000".replace(/0/g,function(){return (~~(Math.random()*16)).toString(16);});
      }

      title.hover(changeTitleColor);
      
      navigator.geolocation.getCurrentPosition(function(position) {
        var lat = position.coords.latitude
        var lon = position.coords.longitude
        $.ajax({
          url: "api/v1/weather",
          data: {lat: lat, lon: lon},
          method: "GET",
          success: function(data) {
            var subtitle = $('.title-2')
            subtitle.text("Today's temperature is " + data.currently.temperature + " F")
            // or can use $('.title-2').text("Today's temperature is " + data.currently.temperature+ " F")
          }
        })
      })

    </script>
    </body>
</html>
